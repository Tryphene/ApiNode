<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="assets/semantic/semantic.min.css" />
    <style type="text/css">
      body {
        background-color: #ffffff;
      }
      .ui.menu .item img.logo {
        margin-right: 1.5em;
      }
      .main.container {
        margin-top: 7em;
      }
      .wireframe {
        margin-top: 2em;
      }
      .ui.footer.segment {
        margin: 5em 0em 0em;
        padding: 5em 0em;
      }
    </style>
  </head>
  <body>
    <div class="ui fixed inverted menu">
      <div class="ui container">
        <a href="#" class="header item">
          <img
            class="logo"
            src="https://www.projectcounter.org/wp-content/uploads/2016/03/icon-register.png"
          />
          Register
        </a>
        <a href="/" class="item">
          <i class="clipboard list icon"></i>
          Liste
        </a>
        <a href="/register" class="item">
          <i class="edit icon"></i>
          Enregistrement
        </a>
        <!-- <div class="ui simple dropdown item">
          Dropdown <i class="dropdown icon"></i>
          <div class="menu">
            <a class="item" href="#">Link Item</a>
            <a class="item" href="#">Link Item</a>
            <div class="divider"></div>
            <div class="header">Header Item</div>
            <div class="item">
              <i class="dropdown icon"></i>
              Sub Menu
              <div class="menu">
                <a class="item" href="#">Link Item</a>
                <a class="item" href="#">Link Item</a>
              </div>
            </div>
            <a class="item" href="#">Link Item</a>
          </div>
        </div> -->
      </div>
    </div>

    <div class="container" style="margin: 100px 30px 30px 30px">
      <form action="" method="post">
        <div class="ui">
          <div class="ui form">
            <div class="four fields">
              <div class="field"></div>
              <div class="field"></div>
              <div class="field"></div>
              <div class="field">
                <div class="ui action input">
                  <input type="text" name="recherche" placeholder="Recherche" />
                  <button class="ui icon button submit">
                    <i class="search icon"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
      <table class="ui compact celled table">
        <thead>
          <tr>
            <!-- <th></th> -->
            <th>Id</th>
            <th>Nom</th>
            <th>Téléphone</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(message of messages){ %>
          <tr>
            <!-- <td class="collapsing">
              <div class="ui fitted slider checkbox">
                <input type="checkbox" /> <label></label>
              </div>
            </td> -->
            <td><%= message.id %></td>
            <td><%= message.user %></td>
            <td><%= message.contact %></td>
            <td>
              <a href="/update/<%= message.id %>"
                ><div
                  class="ui primary icon button"
                  data-inverted=""
                  data-tooltip="Modifier"
                  data-position="bottom center"
                  id="modifier"
                >
                  <i class="edit icon"></i></div
              ></a>
              <a
                href="/delete/<%= message.id %>"
                onclick="return confirm('Etes-vous sûre de vouloir supprimer cet utilisateur?')"
                ><div
                  class="ui negative icon button"
                  data-inverted=""
                  data-tooltip="Supprimer"
                  data-position="bottom center"
                >
                  <i class="delete icon"></i></div
              ></a>
            </td>
          </tr>
          <% } %>
        </tbody>
        <tfoot class="full-width">
          <tr>
            <!-- <th></th> -->
            <th colspan="4">
              <a href="/register">
                <div class="ui right floated small primary labeled icon button">
                  <i class="user icon"></i> Ajouter
                </div>
              </a>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>

    <script>
      $(".ui.basic.modal").modal("show");
    </script>
  </body>
</html>
